<launch>
    <rosparam file="$(find dynamixel_x_mcu_controller)/config/actuators.yaml" command="load" ns="dynamixel_x_mcu_controller_example/"/>
    <rosparam file="$(find dynamixel_x_mcu_controller)/config/joints.yaml" command="load" ns="dynamixel_x_mcu_controller_example/"/>
    <rosparam file="$(find dynamixel_x_mcu_controller)/config/transmissions.yaml" command="load" ns="dynamixel_x_mcu_controller_example/"/>
    <rosparam file="$(find dynamixel_x_mcu_controller)/config/controllers.yaml" command="load"/>

    <node name="dynamixel_x_mcu_controller_example" pkg="dynamixel_x_mcu_controller" type="dynamixel_x_mcu_controller_example" output="screen"/>

    <node
        name="controller_spawner"
        pkg="controller_manager"
        type="spawner"
        respawn="false"
        output="screen"
        args="joint_state_controller
            joint3_controller" />
</launch>